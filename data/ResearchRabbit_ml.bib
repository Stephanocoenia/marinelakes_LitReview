keywords = {Brachidontes mussels,anchialine ecosystems,coral triangle,isolation-by-distance,marine biodiversity,phylogeography},
number = {8},
pages = {1649--1662},
title = {{First come, first served: Possible role for priority effects in marine populations under different degrees of dispersal potential}},
