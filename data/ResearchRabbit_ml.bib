journal = {FEMS Microbiology Ecology},
keywords = {Anchialine,Bacterioplankton,Mastigias,Pyrosequencing,Tripedalia},
number = {5},
pmid = {27004797},
title = {{Jellyfish-associated bacterial communities and bacterioplankton in Indonesian Marine lakes}},
volume = {92},
year = {2016}
}
@article{Ngai_2015,
abstract = {Submerged caves and marine lakes are two iconic and common ecosystems in Ha Long-Cat Ba area.  However, their biol. characteristics are poorly known since very limited studies have been conducted.  The aim of this study was to investigate biodiversity in these ecosystems.  Three submerged caves (Hang Sang, Hang Toi and Qua Bang) and three marine lakes (Dau Be, Ang Du and Qua Bang) were chosen for study.  The results showed that organism communities in submerged caves were abundant with over 142 species found.  The popular groups comprised sponge and soft coral which were distributed along the length of the caves.  Several species with high economic value were widespread in the caves, including stone crab Myomenippe hardwickii, flower crab Portunus pelagicus, cone snails Trochus pyramis, shoemaker spinefoot Siganus sutor, snapper Lutjanus russellii.  Species that permanently live in caves were not detected.  In the lakes where water is well exchanged to the sea, coral reefs were found and they usually formed a narrow band around the lakes.  Sandy beaches were often obsd. around the lakes at the depths of 0.5-2 m, contg. specialty species as clam (Sanguinolaria diphos), snout otter clam (Lutraria rhychaena), sea cucumbers with high d. (in Dau Be, Qua Bang).  There was no coral reef in the enclosed lake (Ang Du) because of low salinity. [on SciFinder(R)]},
